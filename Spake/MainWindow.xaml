<Window x:Class="Spake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar" 
        xmlns:local="clr-namespace:Spake"
        mc:Ignorable="d"
        Title="Speaker Waker" Height="320" Width="400"
        StateChanged="Window_StateChanged">

    <Grid>

        <StackPanel Margin="10,10,10,10">
            <Label>Interval (ms)</Label>
            <TextBox Text="{Binding ToneSchedulerIntervalMs }" />
            <Label>Frequency (Hz)</Label>
            <TextBox Text="{Binding ToneSchedulerFrequencyHz }" />
            <Label>Duration (ms)</Label>
            <TextBox Text="{Binding ToneSchedulerDurationMs }" />
            <Label>Gain</Label>
            <TextBox Text="{Binding ToneSchedulerGain }" />
        </StackPanel>

        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Click="btnSave_Click" Height="24" Width="65"/>

        <Button x:Name="btnTest" Content="Test" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Click="btnTest_Click" Height="24" Width="65"/>

    </Grid>

</Window>
